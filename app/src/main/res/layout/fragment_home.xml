<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0DDE6"
    tools:context=".ui.home.HomeFragment">

    <View
        android:id="@+id/categoryListView"
        android:layout_width="277dp"
        android:layout_height="405dp"
        android:background="@drawable/category_list_view_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/fishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/fish_seafruit"
        tools:layout_editor_absoluteY="224dp" />

    <ImageButton
        android:id="@+id/fruitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/fruit"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="75dp" />

    <ImageButton
        android:id="@+id/drinksButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/getraenke"
        tools:layout_editor_absoluteX="336dp"
        tools:layout_editor_absoluteY="225dp" />

    <ImageButton
        android:id="@+id/iceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/iced"
        tools:layout_editor_absoluteX="168dp" />

    <ImageButton
        android:id="@+id/milchprodukteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/milchprodukte"
        tools:layout_editor_absoluteX="336dp"
        tools:layout_editor_absoluteY="150dp" />

    <ImageButton
        android:id="@+id/sonstigesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/sonstiges"
        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="75dp" />

    <ImageButton
        android:id="@+id/sweetsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/sweets"
        tools:layout_editor_absoluteY="149dp" />

    <ImageButton
        android:id="@+id/vegetablesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/vegetables"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="515dp" />

    <ImageButton
        android:id="@+id/meatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/meat"
        tools:layout_editor_absoluteY="299dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="64dp"
        android:background="@null"
        android:src="@drawable/refrigerator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:src="@android:drawable/btn_dialog"
        app:layout_constraintEnd_toEndOf="@+id/categoryListView"
        app:layout_constraintTop_toTopOf="@+id/categoryListView" />

</androidx.constraintlayout.widget.ConstraintLayout>